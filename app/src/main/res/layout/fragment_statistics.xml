<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background2">

    <TextView
        android:id="@+id/stasticTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:textColor="@color/white"
        android:text="User Statistics"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/earlyTimeLayout"
        android:layout_width="match_parent"
        android:layout_below="@id/stasticTitle"
        android:background="@drawable/rectangle_border"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/earlyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="@string/earliest_wake" />

        <TextView
            android:id="@+id/earlyTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/averageTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earlyTimeLayout"
        android:padding="20dp"

        android:background="@drawable/rectangle_border"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/averageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/white"

            android:layout_weight="1"
            android:text="@string/average_wake" />

        <TextView
            android:id="@+id/averageTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/white"

            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>
</RelativeLayout>